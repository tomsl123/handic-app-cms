{
  "kind": "collectionType",
  "collectionName": "locations",
  "info": {
    "singularName": "location",
    "pluralName": "locations",
    "displayName": "Location",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "description": {
      "type": "text",
      "required": false,
      "minLength": 10
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 2,
      "maxLength": 128
    },
    "address": {
      "type": "string",
      "required": true,
      "minLength": 2
    },
    "media": {
      "type": "media",
      "multiple": true,
      "required": false
    },
    "website": {
      "type": "string",
      "regex": "^(https?:\\/\\/)?([\\w\\-]+\\.)+[a-z]{2,6}(:\\d+)?(\\/.*)?$"
    },
    "opening_hours": {
      "type": "string",
      "required": false
    },
    "contact_details": {
      "type": "text",
      "required": true,
      "minLength": 10
    },
    "location_overview": {
      "type": "string",
      "minLength": 2
    },
    "capacity": {
      "type": "integer",
      "min": 1
    },
    "size": {
      "type": "string"
    },
    "accessibility_features": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::accessibility-feature.accessibility-feature"
    }
  }
}
